extends layout

block content
  .container
    .py-5.text-center
      h2 Inlogpagina
      p.lead De inlogpagina voor administratoren. 
    .container
    form.needs-validation(method='post', action='/inloggen')
      .mb-3
        label(for='gebruikersnaam')
          | Gebruikersnaam
        input#gebruikersnaam.form-control(name='gebruikersnaam', type='text', placeholder='gebruikersnaam', required='true')
        .invalid-feedback
          | Vul een geldige gebruikersnaam in. 
      .mb-3
        label(for='paswoord')
          | Paswoord
        input#paswoord.form-control(name='paswoord', type='password', placeholder='paswoord', required='true')
        .invalid-feedback
          | Vul een geldig paswoord in.
      hr.mb-4
      button.btn.btn-primary.btn-lg.btn-block(type='submit') Inloggen
      hr.mb-4
  