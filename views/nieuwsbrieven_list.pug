extends layout

block content
  .container
    .py-5.text-center
      h2 Nieuwsbrief
      p.lead Hier staan de inschrijvingen voor de nieuwsbrief.
  .container
    hr.mb-4
    a.btn.btn-primary.btn-block.btn-lg(href='/nieuwsbrief/registratie', role='button') Nieuw mailadres registreren
    hr.mb-4
  .container
    p.lead E-mailadressen:
    .list-group
      each nieuwsbrief in nieuwsbrieven_list
        a.list-group-item.list-group-item-action(onclick="nieuwsbriefVerwijderen(this.innerHTML)", data-toggle="modal",data-target="#modal2")
          | #{nieuwsbrief.email}
        .modal.fade(role="dialog", id="modal2", tabindex="-1",aria-labelledby="exampleLabel", aria-hidden="true")
          .modal-dialog(role="document")
            .modal-content
              .modal-header 
                h5.modal-title Verwijderen
                a.close(type="button" , data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
              .modal-body
                p Ben je zeker dat je deze nieuwsbrief wil verwijderen?
              .modal-footer
                a.btn.btn-error(role="button", data-dismiss="modal" ) Cancel
                a.btn.btn-danger.verwijderKnop(role="button", href='') Verwijderen
    hr.mb-4
  .container
    a.btn.btn-outline-primary.btn-block.btn-lg(href='/administrator/beheer', role='button') Naar beheerpagina 
    hr.mb-4
    br